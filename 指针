#include <stdio.h>
int main()
{

	double d = 3.14;
	double* pd = &d;     //pd是一个变量  叫做指针变量
	*pd = 5.5;
	printf("%lf\n", d);
	printf("%lf\n", *pd);


	return 0;
}
