#include <stdio.h>													//计算1！+2!+3!...10!优化版的练习题
int main()
{
	int n = 0;
	int ret = 1;
	int sum = 0;
	

	for (n = 1;n <=10;n++)
	{
		ret = ret * n;
		sum = sum + ret;
		
	}
		printf("%d ", sum);

	return 0;
}
